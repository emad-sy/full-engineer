<script>
var wd = document.getElementById("wd");
var wss = document.getElementById("wss");
var wso = document.getElementById("wso");
var wgsb = document.getElementById("wgsb");
var wgsa = document.getElementById("wgsa");
var wgss= document.getElementById("wgss");
var w = document.getElementById("w");
var ww = document.getElementById("ww");
function mawad(){
wgsb.innerHTML = wd.value / (wss.value-wso.value);
wgsa.innerHTML = wd.value / (wd.value-wso.value);
wgss.innerHTML = wss.value / (wss.value-wso.value);
w.innerHTML = wss.value - wd.value;
ww.innerHTML = w.innerHTML*100/wd.value;
}
</script>


